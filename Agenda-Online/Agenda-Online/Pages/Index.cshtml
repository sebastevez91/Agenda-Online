@page
@model IndexModel
@{
    ViewData["Title"] = "Agenda Online";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Bienvenido a Agenda Online</h1>
    <p class="lead">Administra tus contactos y etiquetas de manera fácil y rápida.</p>

    @if (!User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Crear cuenta</a>
        <a class="btn btn-success btn-lg" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
    }
    else
    {
        <a class="btn btn-success btn-lg" asp-page="/Contacts/Index">Ver Contactos</a>
    }
</div>
