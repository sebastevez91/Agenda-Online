@page
@model Agenda_Online.Pages.Contacts.IndexModel

<h2 class="my-4">Lista de Contactos</h2>

<p>
    <a class="btn btn-success mb-3" asp-page="Create">Agregar Contacto</a>
</p>

<table class="table table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Etiqueta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contacto in Model.Contact)
        {
            <tr>
                <td>@contacto.ContactName</td>
                <td>@contacto.Phone</td>
                <td>@contacto.Mail</td>
                <td>
                    @foreach (var etiqueta in contacto.LabelsContact.Select(ce => ce.Label))
                    {
                        <span class="badge badge-primary">@etiqueta.LabelName</span>
                    }
                </td>

                <td>
                    <a class="btn btn-warning btn-sm" asp-page="Edit" asp-route-id="@contacto.ContactId">Editar</a> |
                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@contacto.ContactId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
